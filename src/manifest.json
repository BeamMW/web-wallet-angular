{
    "manifest_version": 2,
    "name": "BEAM Web wallet",
    "description": "BEAM Wallet extension",
    "version": "1.0",
    "browser_action": {
        "default_popup": "index.html"
    },
    "background": {
        "scripts": [
            "background.js",
            "runtime.js"
        ]
    },
    "permissions": [],
    "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}