{
    "manifest_version": 2,
    "name": "Beam Web wallet",
    "short_name": "Beam Web wallet",
    "description": "Beam Web wallet extension",
    "version": "1.0.0",
    "browser_action": {
        "default_popup": "index.html"
    },
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "icons": { "16": "assets/chrome-extention-icon-16x16.png",
        "48": "assets/chrome-extention-icon-48x48.png",
       "128": "assets/chrome-extention-icon-128x128.png" },
    "permissions": [
        "storage"
    ],
    "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}