{
    "manifest_version": 2,
    "name": "BEAM Web wallet",
    "short_name": "BEAM Web wallet",
    "description": "BEAM Wallet extension",
    "version": "1.0",
    "browser_action": {
        "default_popup": "index.html"
    },
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "icons": { "16": "assets/beam-logo-round@2x.png",
        "48": "assets/beam-logo-round@2x.png",
       "128": "assets/beam-logo-round@2x.png" },
    "permissions": [
        "storage"
    ],
    "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}